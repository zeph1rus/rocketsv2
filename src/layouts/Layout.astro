---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	<div class="grid grid-rows-4 grid-flow-col gap-1 border-black border-2 p-0.5">
		<div class="row-span-4 border-black border-2">01</div>
		<div class="col-span-3 border-black border-2">02</div>
		<div class="row-span-3 col-span-3 border-black border-2 space-x-4"><slot /></div>
	</div>

	</body>
</html>

